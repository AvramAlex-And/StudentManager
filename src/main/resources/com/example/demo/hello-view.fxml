<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          alignment="center" hgap="10" vgap="10" prefWidth="600" prefHeight="400"
          fx:controller="loose.oose.fis.lab.student.manager.controllers.LoginController">
    <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>

    <Text text="FIS - Student Manager" GridPane.columnSpan="2" GridPane.rowIndex="0"/>
    <Label text="Username:" GridPane.rowIndex="1"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <Label text="Password:" GridPane.rowIndex="2"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <Button onAction="#handleLoginButtonAction" text="Login"/>
    </HBox>

    <Text fx:id="loginMessage" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
</GridPane>
